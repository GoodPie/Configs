[variables]
padding = 2

[colors]
background = #000000AA
background-alt = #000000AA
background-alt-2 = #801515
foreground = #FFFFFF
foreground-alt = #000000
transparent = #00000000
primary = #FFFFFF
secondary = #000000
alert = #FFFFFF
underline = #00000AA

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/main]
width = 100%
height = 24
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
underline-size = 0

border-bottom = 2
border-bottom-color = ${colors.underline}

spacing = 0
padding-left = 2
padding-right = 2
module-margin-left = 0
module-margin-right = 0

font-0 = Roboto:pixelsize=12;0
font-1 = FontAwesome:pixelsize=12;-2

modules-left = battery volume
modules-center = i3
modules-right = memory wifi date time

tray-position = right
tray-padding = 8
tray-transparent = true

wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3

strip-wsnumbers = true
index-sort = true
enable-click = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-9 = 9;
ws-icon-default = m

label-mode = %mode%
label-mode-padding = 1
label-mode-background = #e60053

label-focused = %name%
label-focused-foreground = #A3A3A3
label-focused-background = ${colors.foreground}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2

label-urgent = %name%
label-urgent-foreground = #000000
label-urgent-padding = 2

[module/volume]
interval = 0.5
type = internal/volume

click-left = urxvt -name float -e ncmpcpp &
click-right = pavucontrol &

format-volume-padding = 5
format-volume-margin = 0
format-volume-background = ${colors.background-alt}

scroll-up = pactl set-sink-volume 1 +1%
scroll-down = pactl set-sink-volume 1 -1%

bar-volume-width = 10

bar-volume-empty = 
bar-volume-fill = 
bar-volume-indicator = 

label-volume = "VOL: %percentage%"
format-volume = <label-volume> <bar-volume>

[module/memory]
type = internal/memory
interval = 2
label = MEM: %percentage_used%

format-background = ${colors.background-alt}
format-padding = 5
format-margin = 1

[module/date]
type = internal/date
date = DATE: %d-%m-%Y
interval = 5

format-background = ${colors.background-alt}
format-padding = ${variables.padding}
format-margin = 1

[module/time]
type = internal/date
date = TIME: %H:%M
interval = 5

format-background = ${colors.background-alt}
format-padding = ${variables.padding}
format-margin = 1

[module/wifi]
type = internal/network
interface = wlp4s0
interval = 3.0
;udspeed-minwidth = 0

format-disconnected-padding = ${variables.padding}
format-disconnected-margin = 2
format-disconnected-background = ${colors.background-alt}

format-connected-padding = ${variables.padding}
format-connected-margin = 1
format-connected-background = ${colors.background-alt}

format-connected = <label-connected>
label-connected = DOWN: %downspeed%  UP: %upspeed%
label-disconnected = Disconnected

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging-padding = ${variables.padding}
format-charging-background = ${colors.background-alt}
format-charging-margin = 1

format-discharging-padding = ${variables.padding}
format-discharging-background = ${colors.background-alt}
format-discharging-margin = 1

format-full-padding = ${variables.padding}
format-full-background = ${colors.background-alt}
format-full-margin = 1

bar-capacity-format = %fill%%indicator%%empty%
bar-capacity-foreground = #FFF
bar-capacity-width = 10

; Not entirely sure what these are for
bar-capacity-empty = 
bar-capacity-fill = 
bar-capacity-indicator = 

; Use + or - to indicate charging / discharging
label-charging = "BAT: %percentage%"
label-discharging = "BAT(-): %percentage%"
label-full = "BAT: %percentage%"

format-charging = <label-charging> <bar-capacity>
format-discharging = <label-discharging> <bar-capacity>
format-full = <label-full> <bar-capacity>
